    "electron-packager": "^11.1.0",
    "standard": "^11.0.0",
    "ws": "^5.0.0"
  },
  "scripts": {
    "start": "npm install && electron .",
    "standardize": "standard --fix \"./*.js\" \"./assets/js/*.js\"",
    "package-linux": "electron-packager . team-7-checkers --overwrite --asar=true --platform=linux --arch=x64 --prune=true --out=../release/",
    "package-win": "electron-packager . team-7-checkers --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=../release",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --out=../release"
  },
  "dependencies": {
    "npm": "^5.7.1",
    "electron": "latest"
  }
